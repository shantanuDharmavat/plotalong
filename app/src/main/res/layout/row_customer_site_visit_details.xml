<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:padding="5dp"
            android:id="@+id/custSiteVisitImageViewMap"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_weight="5"
            app:srcCompat="@android:drawable/ic_dialog_map" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/custSiteVisitTextViewDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Hello" />

            <TextView
                android:id="@+id/custSiteVisitTextViewName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Hello" />

            <TextView
                android:id="@+id/custSiteVisitTextViewPlotsLiked"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Hello" />

            <TextView
                android:id="@+id/custSiteVisitTextViewProposalNo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Hello" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>